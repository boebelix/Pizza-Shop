<server>
	<dataSource id="DefaultDataSource" jndiName="jdbc/mySQL">
		<jdbcDriver libraryRef="MySQLLib"/>
		<properties databaseName="${env.DB_NAME}" serverName="${env.DB_HOST}"
					portNumber="${env.DB_PORT}" user="${env.DB_USER}" password="${env.DB_PW}"/>
	</dataSource>

	<jndiEntry id="UserServiceInternURI" jndiName="UserServiceInternURI" value="${env.USER_SERVICE_PATH}"/>
	<jndiEntry id="PizzaProductionInternURI" jndiName="PizzaProductionInternURI" value="${env.PIZZA_PRODUCTION_PATH}"/>
</server>
